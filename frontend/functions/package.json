{
  "name": "tlm-backend",
  "version": "1.0.0",
  "description": "Backend for TLM Web App - firebase functions",
  "author": "Gabor Meszaros",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "fb:serve",
    "deploy": "npm-run-all fb:build fb:deploy",
    "fb:build": "tsc",
    "fb:serve": "npm-run-all kill-port fb:getconfig fb:set:dev fb:start-emulators",
    "fb:getconfig": "firebase functions:config:get > .runtimeconfig.json",
    "fb:set:prod": "firebase functions:config:set environment.production=true",
    "fb:set:dev": "firebase functions:config:set environment.production=false",
    "fb:start-emulators": "firebase emulators:start",
    "fb:shell": "firebase functions:shell",
    "fb:start": "npm run fb:shell",
    "fb:deploy": "firebase deploy --only functions",
    "fb:logs": "firebase functions:log",
    "kill-port": "kill-port --port 8080, 5000, 5001",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "main": "dist/main.js",
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.7",
    "@nestjs/common": "^8.4.3",
    "@nestjs/core": "^8.4.3",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^9.0.3",
    "@nestjs/platform-express": "^8.4.3",
    "express": "^4.17.3",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.16",
    "mongoose": "^6.2.9",
    "nest-router": "^1.0.9",
    "node-fetch": "^3.2.3",
    "node-forge": ">=1.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.8",
    "@nestjs/testing": "^8.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^17.0.23",
    "@types/node-fetch": "^2.6.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.3.3",
    "jest": "^27.5.1",
    "kill-port": "^1.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
