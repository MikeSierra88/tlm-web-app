{
  "name": "tlm-backend",
  "version": "1.0.0",
  "description": "Backend for TLM Web App - firebase functions",
  "author": "Gabor Meszaros",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prenest:build": "rimraf dist",
    "start": "npm-run-all --parallel nest:start:dev fb:serve",
    "deploy": "npm-run-all nest:build fb:deploy",
    "nest:build": "nest build",
    "nest:start": "nest start",
    "nest:start:dev": "nest start --watch",
    "nest:start:debug": "nest start --debug --watch",
    "nest:start:prod": "node dist/main",
    "fb:build": "tsc",
    "fb:serve": "npm-run-all kill-port nest:build fb:getconfig fb:set:dev fb:start-emulators",
    "fb:getconfig": "firebase functions:config:get > .runtimeconfig.json",
    "fb:set:prod": "firebase functions:config:set environment.production=true",
    "fb:set:dev": "firebase functions:config:set environment.production=false",
    "fb:start-emulators": "firebase emulators:start",
    "fb:shell": "firebase functions:shell",
    "fb:start": "npm run fb:shell",
    "fb:deploy": "fb:set:prod && firebase deploy --only functions",
    "fb:logs": "firebase functions:log",
    "kill-port": "kill-port --port 8080, 5000, 5001",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "main": "dist/main.js",
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.4",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/platform-express": "^8.2.4",
    "express": "^4.17.2",
    "firebase-admin": "^9.12.0",
    "firebase-functions": "^3.16.0",
    "mongoose": "^6.1.5",
    "nest-router": "^1.0.9",
    "node-fetch": "^2.6.6",
    "node-forge": ">=1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/node-fetch": "^3.0.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.3.3",
    "jest": "^27.2.5",
    "kill-port": "^1.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
